<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccueilAndConso.ConsoActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100"
            android:id="@+id/linlayout">

            <TextView
                android:id="@+id/alctexte"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="25"
                android:gravity="center"
                android:text="Nom"
                android:textAlignment="center"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/nbverretexte"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="25"
                android:gravity="center"
                android:text="Verre(s)"
                android:textAlignment="center"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/degtexte"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="25"
                android:gravity="center"
                android:text="DegrÃ©"
                android:textAlignment="center"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/heuretexte"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="25"
                android:gravity="center"
                android:text="Date"
                android:textAlignment="center"
                android:textStyle="bold"/>



        </LinearLayout>

        <ListView
            android:id="@+id/listViewConso"
            android:layout_width="368dp"
            android:layout_height="400dp"
            android:layout_below="@+id/linlayout"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/delAllConso"
            android:text="Tout supprimer"
            android:layout_below="@+id/listViewConso"/>

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>