<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccueilAndConso.AccueilActivity">


    <RelativeLayout
        android:id="@+id/overall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relativeLayoutimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/logo"
        />


    </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativelayoutid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/nomuser"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:textSize="15dp"

                />

            <TextView
                android:id="@+id/deco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nomuser"
                android:clickable="true"
                android:text="Se dÃ©connecter"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="15dp"

                />





        </RelativeLayout>





    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relativeLayoutimg">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/roundtest"

            />

        <TextView
            android:id="@+id/textJeux"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView2"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:text="Teste tes reflexes !"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="20dp"

            />




        <Button
            android:id="@+id/btnAddConso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="Ajouter Consommation" />

        <Button
            android:id="@+id/btnViewConso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnAddConso"
            android:layout_centerHorizontal="true"
            android:text="Ma Consommation" />



    </RelativeLayout>
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>