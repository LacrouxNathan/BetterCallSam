<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:fillViewport="false">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".preferencePage.preference">

    <!--Titre-->
    <TextView
        android:id="@+id/Titre1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profil"
        android:textSize="40dp" />

    <!--Partie Sexe-->
    <TextView
        android:id="@+id/TV_sexe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Sexe :"
        android:textColor="@android:color/black"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@+id/Titre1" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rb_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male" />

        <RadioButton
            android:id="@+id/rb_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="female" />
    </RadioGroup>

    <!--Partie Taille-->
    <TextView
        android:id="@+id/TV_taille"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Taille :"
        android:textColor="@android:color/black"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@+id/TV_sexe" />

    <EditText
        android:id="@+id/Edit_taille"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!--Partie poids-->
    <TextView
        android:id="@+id/TV_poids"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Poids :"
        android:textColor="@android:color/black"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@+id/TV_taille" />

    <EditText
        android:id="@+id/Edit_poids"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">
        <Button
            android:id="@+id/Button_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sauvergarder"/>

        <Button
            android:id="@+id/button_retour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="Retour"
            />
    </GridLayout>

</LinearLayout>
</ScrollView>